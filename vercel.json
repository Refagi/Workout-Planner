{
  "version": 2,
  "builds": [
    {
      "src": "src/index.js",
      "use": "@vercel/node",
      "config": {
        "build": {
          "env": {
            "NODE_ENV": "production"
          }
        }
      }
    }
  ],
  "routes": [
    {
      "src": "/auth",
      "dest": "/public/auth.html"
    },
    {
      "src": "/verify-email",
      "dest": "/public/verifyEmail.html"
    },
    {
      "src": "/",
      "dest": "/public/index.html"
    },
        {
      "src": "/(.*)",
      "dest": "src/index.js"
    }
  ]
}
