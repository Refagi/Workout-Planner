{
  "version": 2,
  "builds": [
    {
      "src": "src/index.js",
      "use": "@vercel/node",
      "config": {
        "build": {
          "env": {
            "NODE_ENV": "production"
          }
        }
      }
    }
  ],
  "routes": [
    {
      "src": "/(css|js|images|fonts)/(.*)",
      "dest": "/public/$1/$2"
    },
    {
      "src": "/(.*\\.(html|png|jpg|jpeg|ico|svg|webmanifest))",
      "dest": "/public/$1"
    },
    {
      "src": "/auth",
      "dest": "/public/auth.html"
    },
    {
      "src": "/verify",
      "dest": "/public/verifyEmail.html"
    },
    {
      "src": "/(.*)",
      "dest": "src/index.js"
    },
    {
      "src": "/",
      "dest": "/public/index.html"
    }
  ]
}
